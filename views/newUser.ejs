<%- include("top.ejs") %>
    <p>Preencha os campos abaixo para cadastrar ou editar um usuário</p>
    <div class="col-6">
        <form action="/users/new" method='POST'>
            <div class="row mb-3"></div>
                <div class="form-group">
                    <label for="name">Nome:</label>
                    <input type="text" name="name" value="<%= user.name %>" class="form-control" placeholder="Nome do usuário">
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group">
                    <label for="cpf">Senha:</label>
                    <input type="password" name="password" class="form-control" placeholder="Senha do cliente">
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group">
                    <label for="age">Email:</label>
                    <input type="text" name="email" value="<%= user.email %>" class="form-control" placeholder="Email do usuário">
                </div>
            </div>
            <div class="row mb-3"></div>
                <div class="form-group">
                    <label for="profile">Perfil:</label>
                    <select name="profile" class="form-control" value="<%= user.profile %>">
                        <option value="1">Usuário Comum</option>
                        <option value="2">Usuário Administrador</option>
                    </select>
                </div>
                <p> 
                    <input type="submit" value="Salvar" class="btn btn-primary">
                    <a href="/users" class="btn btn-secondary">Cancelar</a>
                </p>
                <input type="hidden" name="id" value="<%=user._id%>">
        </form>
    </div>
    </body>
    <script> 
        if(window.location.search){
            const error = window.location.search.split("=")[1];
            alert(decodeURI(error))
        }
    </script>
    
<%- include("bottom.ejs") %>